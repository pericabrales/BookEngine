<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".BookDetailActivity">

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gradient1"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/header_bottom"
        android:textSize="25dp"
        android:textAppearance="?attr/textAppearanceBody1"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/web_activity_button"
        android:padding="10dp"
        android:textColor="@color/black"
        android:onClick="sendWebSearch"
        />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:padding="10dp"
        android:src="@drawable/icon_book"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_book_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gradient1"
        android:textSize="20dp"
        android:textAppearance="?attr/textAppearanceBody1"/>

    <TextView
        android:id="@+id/tv_book_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gradient1"
        android:textSize="20dp"
        android:textAppearance="?attr/textAppearanceBody1"/>

    <TextView
        android:id="@+id/tv_book_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gradient1"
        android:textSize="20dp"
        android:textAppearance="?attr/textAppearanceBody1"/>

    <TextView
        android:id="@+id/tv_book_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/gradient1"
        android:textSize="20dp"
        android:textAppearance="?attr/textAppearanceBody1"/>

</LinearLayout>